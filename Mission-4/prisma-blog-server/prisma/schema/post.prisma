model Post {
      id         String     @id @default(uuid())
      title      String     @db.VarChar(250)
      content    String?    @db.Text
      thumbnail  String?
      isFeatured Boolean    @default(false)
      status     PostStatus @default(PUBLISHED)
      tags       String[]
      views      Int        @default(0)
      authorId   String
      createdAt  DateTime   @default(now())
      updatedAt  DateTime   @updatedAt
      comments   comment[]

      @@index([authorId])
      @@map("posts")
}

enum PostStatus {
      DRAFT
      PUBLISHED
      ARCHIVED
}
